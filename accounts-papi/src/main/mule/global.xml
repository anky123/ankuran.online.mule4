                <reconnect-forever frequency="${secure::http.requester.reconnection_frequency}" />
            </reconnection>
            <tls:context>
                <tls:trust-store insecure="true" />
            </tls:context>
        </http:request-connection>
    </http:request-config>
    <http:request-config name="ACCOUNTS_SFDC_SAPI_HTTP_Request_configuration" doc:name="SFDC SAPI HTTP Request configuration" doc:id="7c667ba6-db25-4f93-be6a-b39d06f107f1" basePath="${secure::http.requester.sfdc_sys_api.basepath}" responseTimeout="${secure::http.requester.response_timeout}">
