    <configuration doc:name="Configuration" doc:id="6218d92d-c9ee-4ce8-9b6b-f5ce18dadad5" defaultErrorHandler-ref="globalErrorHandler" />
    <http:listener-config name="accounts-papi-httpListenerConfig">
        <http:listener-connection host="${secure::http.listener.host}" port="${secure::http.listener.private_port}" readTimeout="${secure::http.listener.read_timeout}" />
    </http:listener-config>
    <apikit:config name="accounts-papi-config" api="resource::3a821d74-ead4-48a9-87e6-5bb67f180d55:accounts-papi:1.0.0:raml:zip:accounts-papi.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
    <api-gateway:autodiscovery apiId="${secure::api.id}" ignoreBasePath="true" doc:name="API Autodiscovery" doc:id="3d84e1d1-c27e-47c7-b6f6-f260d4470012" flowRef="accounts-papi-main" />
    <secure-properties:config name="Secure_Properties_Config" doc:name="Secure Properties Config" doc:id="0e15e8b5-e620-47f2-9c47-a97055cb29e5" file="properties\accounts-papi-${mule.env}.yaml" key="${secure.properties.key}" />
    <http:request-config name="FIRST_SAPI_HTTP_Request_configuration" doc:name="FIRST SAPI HTTP Request configuration" doc:id="7c667ba6-db25-4f93-be6a-b39d06f107f1" basePath="${secure::http.requester.first_sys_api.basepath}" responseTimeout="${secure::http.requester.response_timeout}">
