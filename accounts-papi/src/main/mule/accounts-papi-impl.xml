	<sub-flow name="country-lookup" doc:id="eee0997c-7427-4292-8cdc-ea7fc5882b10" >
		<logger level="INFO" doc:name="INFO : Flow Start Logger" doc:id="04e1f991-3f9a-41e1-b123-1c9ac0adbde7" message='#["===== Before HTTP request in " ++ flow.name ++ " flow ====="]'/>
		<ee:transform doc:name="Prepare request parameter" doc:id="64b2a22a-702d-4824-93df-54d28b6a9eae" >
			<ee:variables >
				<ee:set-variable variableName="requestParameter" ><![CDATA[%dw 2.0
output application/java
---
{
	"method" : "GET",
	"path" : "/countries"
}]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
		<flow-ref name="common-200-requester-flow" doc:name="common-200-requester-flow"/>
