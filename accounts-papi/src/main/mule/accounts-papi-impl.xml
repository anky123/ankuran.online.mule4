	<sub-flow name="initiate-create-account" doc:id="a2e406fe-32b1-4597-a6b0-1f294cb44b23" >
		<logger level="DEBUG" doc:name="DEBUG : Flow Start Logger" doc:id="30c39831-908e-47e3-bc04-8ea64ae26e15" message='#["===== Before HTTP request in " ++ flow.name ++ " flow ====="]'/>
		<ee:transform doc:name="Prepare request parameter" doc:id="64b2a22a-702d-4824-93df-54d28b6a9eae" >
			<ee:variables >
				<ee:set-variable variableName="requestParameter" ><![CDATA[%dw 2.0
output application/java
---
{
	"method" : "POST",
	"path" : "/accounts"
}]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
		<flow-ref name="common-201-requester-flow" doc:name="common-201-requester-flow"/>
		<logger level="DEBUG" doc:name="DEBUG : create account response" doc:id="db6d4530-7bea-4386-aed9-dd69022fe115" message='#[payload]'/>
		<logger level="DEBUG" doc:name="DEBUG : Flow End Logger" doc:id="ece82a56-9ad8-4ae6-8f5b-aa4db5246564" message='#["===== After HTTP request in " ++ flow.name ++ " flow ====="]'/>
	</sub-flow>
	<sub-flow name="initiate-update-account" doc:id="a2e406fe-32b1-4597-a6b0-1f294cb44b23" >
		<logger level="DEBUG" doc:name="DEBUG : Flow Start Logger" doc:id="04e1f991-3f9a-41e1-b123-1c9ac0adbde7" message='#["===== Before HTTP request in " ++ flow.name ++ " flow ====="]'/>
		<ee:transform doc:name="Prepare reqest payload" doc:id="bc9ab37d-e915-445c-a6a3-551c5fbb576a" >
			<ee:message >
				<ee:set-payload resource="dwl/updateAccountRequest.dwl"/>
			</ee:message>
		</ee:transform>
		<ee:transform doc:name="Prepare request parameter" doc:id="64b2a22a-702d-4824-93df-54d28b6a9eae" >
			<ee:variables >
				<ee:set-variable variableName="requestParameter" ><![CDATA[%dw 2.0
output application/java
---
{
	"method" : "PUT",
	"path" : "/accounts/" ++ vars.accountId
}]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
		<flow-ref name="common-201-requester-flow" doc:name="common-201-requester-flow"/>
		<logger level="DEBUG" doc:name="DEBUG : update account response" doc:id="db6d4530-7bea-4386-aed9-dd69022fe115" message='#[payload]'/>
		<logger level="DEBUG" doc:name="DEBUG : Flow End Logger" doc:id="ece82a56-9ad8-4ae6-8f5b-aa4db5246564" message='#["===== After HTTP request in " ++ flow.name ++ " flow ====="]'/>
	</sub-flow>
